<h3><a class="btn btn-secondary" href="/employee"><i class="fa fa-plus"></i> Create New</a> Employee List</h3>
<table class="table table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>Salary</th>
        <th>Employee Code</th>
        <th>mobile</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    </thead>
    <tbody>
    {{#each list}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.salary}}</td>
            <td>{{this.empCode}}</td>
            <td>{{this.mobile}}</td>

            <td><a href="/employee/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a></td>
            <td><a href="/employee/delete/{{this._id}}" onclick="return confirm('Are you sure u want to delete?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a></td>


        </tr>
    {{/each}}
    </tbody>
</table>